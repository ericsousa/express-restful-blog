<% include ../partials/header %>

  <div class="ui main text container segnment">
    <div class="ui huge header">
      New Blog
    </div>
    <form action="/blogs" method="post" class="ui form">
        <div class="field">
          <label>Title</label>
          <input type="text" name="blog[title]" placeholder="title" required>
        </div>
        <div class="field">
          <label>Image</label>
          <input type="text" name="blog[image]" placeholder="image" required>
